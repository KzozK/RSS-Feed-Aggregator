                <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
                    <TextBlock Text="RSS FeedReader" Style="{StaticResource PhoneTextNormalStyle}" Margin="12,0" Foreground="Black"/>
