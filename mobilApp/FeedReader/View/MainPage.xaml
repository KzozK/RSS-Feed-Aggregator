                <phone:LongListSelector Name="CategoryLLS" Margin="10,142,10,158" SelectionChanged="CategoryLLS_SelectionChanged">

                    <phone:LongListSelector.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">

                                <TextBlock Text="{Binding categoryName}" Margin="20 0 0 0" />
                                <ListBox ItemsSource="{Binding feedList}" ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionChanged="CategoryList_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image x:Name="categoryImage" Source="{Binding image}" Width="10" Height="10" />
                                                <TextBlock x:Name="categoryTextBlock" Text="{Binding name}" Margin="20 0 0 0" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </DataTemplate>

                    </phone:LongListSelector.ItemTemplate>

